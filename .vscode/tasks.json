{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Sass Test",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "sass",
            "args": [
                "--style=expanded",
                "--load-path=${workspaceFolder}/stylesheets",
                "--no-source-map",
                "${workspaceFolder}/tests/tests/${fileBasename}:${workspaceFolder}/tests/output/${fileBasenameNoExtension}.out.css",
            ],
            "isBackground": false,
            "runOptions": {
                "runOn": "default"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}
